<!-- Nodes List -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-server"></i>
                    Manage Servers (Nodes)
                </h5>
                <span class="badge bg-primary fs-6">
                    Total: <%= nodes.length %>
                </span>
            </div>
            <div class="card-body">
                <% if (nodes.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-server fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No servers found</h5>
                        <p class="text-muted">Servers will appear here once they connect to Headscale</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>IP Address</th>
                                    <th>Tags</th>
                                    <th>Last Seen</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% nodes.forEach(node => { %>
                                    <tr>
                                        <td>
                                            <strong><%= node.name %></strong>
                                            <% if (node.online) { %>
                                                <i class="fas fa-circle text-success ms-2" title="Online"></i>
                                            <% } else { %>
                                                <i class="fas fa-circle text-danger ms-2" title="Offline"></i>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.online) { %>
                                                <span class="badge bg-success">Online</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Offline</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <code><%= node.ipAddresses ? node.ipAddresses.join(', ') : 'N/A' %></code>
                                        </td>
                                        <td>
                                            <% if (node.tags && node.tags.length > 0) { %>
                                                <% node.tags.forEach(tag => { %>
                                                    <span class="badge bg-info me-1"><%= tag %></span>
                                                <% }) %>
                                            <% } else { %>
                                                <span class="text-muted">No tags</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= node.lastSeen || 'Never' %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/nodes/<%= node.id %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/nodes/<%= node.id %>/edit" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="confirmDelete('<%= node.id %>', '<%= node.name %>')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete server <strong id="deleteNodeName"></strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete Server</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(nodeId, nodeName) {
    document.getElementById('deleteNodeName').textContent = nodeName;
    document.getElementById('deleteForm').action = `/nodes/${nodeId}/delete`;
    
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    deleteModal.show();
}

// Auto-refresh every 30 seconds
setInterval(() => {
    location.reload();
}, 30000);
</script>
